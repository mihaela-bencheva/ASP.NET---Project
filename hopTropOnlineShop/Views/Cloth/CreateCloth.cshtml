@model hopTropOnlineShop.Models.Cloth
@{
    ViewData["Title"] = "CreateCloth";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateCloth</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCloth" asp-controller="Cloth" method="post">
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfCloth" class="control-label"></label>
                <input asp-for="TypeOfCloth" class="form-control" type="text" />
                <span asp-validation-for="TypeOfCloth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" type="text" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" type="text" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <input asp-for="Currency" class="form-control" type="text" />
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
