<form asp-controller="Cloth" asp-action="SearchCloth" method="get">
    <p>
        <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>

<caption style="color: white;">Информация за продуктите:</caption>
<form>
    <table class="table" style="color: white;">

        <thead>
            <tr>
                <th>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeOfCloth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Currency)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Clothes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDCloth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeOfCloth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Currency)
                    </td>
                    <td>
                        <button onclick="location.href='@Url.Action("AddToBasket", "WishList", new { id = item.IDCloth })'" type="button">Добави в кошницата</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
@if (Model.User != null)
{
    @if (Model.User.IsAdministrator)
    {
        <button onclick="location.href='@Url.Action("CreateCloth", "Cloth")'" type="button">Добави нова дреха</button>
    }
}

<script>
    var modal = document.getElementById("myModal");
    var img = document.getElementById("img1");
    var modalImg = document.getElementById("img01");
    var captionText = document.getElementById("caption");
    img.onclick = function () {
        modal.style.display = "block";
        modalImg.src = this.src;
        captionText.innerHTML = this.alt;
    }
    var span = document.getElementsByClassName("close")[0];

    span.onclick = function () {
        modal.style.display = "none";
    }
</script>

